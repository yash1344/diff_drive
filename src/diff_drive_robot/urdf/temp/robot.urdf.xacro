<?xml version="1.0"?>
<robot name="diff_drive_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="robot.gazebo" />
    <xacro:include filename="inertial_macros.xacro" />

    <!-- Base link -->

    <link name="base_link">

    </link>

    <!-- Chassis link -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="-0.1 0 0" />
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.15 0 0.075" />
            <geometry>
                <box size="0.3 0.3 0.15" />
            </geometry>
            <material name="chassis_material">
                <color rgba="0.40 0.23 0.72 1.0" />
            </material>
        </visual>
        <collision>
            <origin xyz="0.15 0 0.075" />
            <geometry>
                <box size="0.3 0.3 0.15" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <!-- Left wheel link -->

    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="0 0.175 0" rpy="-${pi/2} 0 0" />
        <child link="left_wheel" />
        <parent link="base_link" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="left_wheel">
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
        </collision>
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
            <material name="wheel_material">
                <color rgba="0.0 0.0 0.0 1.0" />
            </material>
        </visual>
    </link>

    <!-- Right wheel link -->
    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="0 -0.175 0" rpy="${pi/2} 0 0" />
        <child link="right_wheel" />
        <parent link="base_link" />
        <axis xyz="0 0 -1" />
    </joint>

    <link name="right_wheel">
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
            <material name="wheel_material">
                <color rgba="0.0 0.0 0.0 1.0" />
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
        </collision>
    </link>

    <!-- Castor wheel link -->
    <joint name="castor_wheel_joint" type="fixed">
        <parent link="chassis" />
        <child link="castor_wheel" />
        <origin xyz="0.24 0 0" />
    </joint>

    <link name="castor_wheel">
        <xacro:inertial_sphere mass="0.4" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_sphere>
        <visual>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <material name="castor_material">
                <color rgba="0.62 0.62 0.62 1.0" />
            </material>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
        </collision>
    </link>

    <!-- Gazebo Parameters -->
    <gazebo reference="left_wheel">
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
    </gazebo>

    <gazebo reference="right_wheel">
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
    </gazebo>

    <gazebo reference="castor_wheel">
        <mu1>0.000001</mu1>
        <mu2>0.000001</mu2>
    </gazebo>

    <gazebo reference="base_link">
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
    </gazebo>

    <!-- Lidar Sensor -->
    <joint name="laser_joint" type="fixed">
        <parent link="chassis" />
        <child link="laser_frame" />
        <origin xyz="0.1 0 0.175" rpy="0 0 0" />
    </joint>
    <link name="laser_frame">
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder length="0.04" radius="0.05" />
            </geometry>
            <material name="laser_material">
                <color rgba="0.13 0.13 0.13 1.0" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" />
            <geometry>
                <cylinder length="0.04" radius="0.05" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!-- IMU Sensor -->
    <joint name="imu_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="imu_link" />
    </joint>

    <link name="imu_link" />
</robot>